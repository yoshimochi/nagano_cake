<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-8 mx-auto">
      <h2 class="mt-5 mb-5">商品新規登録</h2>
    </div class="col-md-8">
      <%= form_with model:@item, url:admin_items_path, local:true do |f| %>
        <div class="form-group">
          <%= f.label :"商品画像", class: "col-sm-6 control-label" %>
          <%= f.attachment_field :image, class: "image" %>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <h4 class="item-name">商品名</h4>
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <h4 class="item-introduction">商品説明</h4>
            <%= f.text_area :introduction, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <h4>ジャンル</h4>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択して下さい --", class: "custom-select d-block w-100" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <h4>ジャンル</h4>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択して下さい --" %>
          </div>
        </div>

        <div class="row">
          <div class="col-6 mb-3">
            <h4>税抜価格</h4>
            <%= f.text_field :price %>円
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <h4>販売ステータス</h4>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "販売中" %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止中" %>
          </div>
        </div>
        <%= f.submit '新規登録', class: "btn btn-primary btn-lg btn-block" %>
      <% end %>
  </div>
</div>











