<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="mt-5">
        <div class="offset-2">
          <h4 class="font-weight-bold">商品新規登録</h4>
        </div>
      </div>
    </div>
  </div>  
</div>

<div class="container mx-auto">
  <div class="offset-2">
    <form class="form-horizontal mt-5">
        <%= form_with model:@item, url:admin_items_path, local:true do |f| %>
          <div class="form-group">
            <%= f.label :"商品画像", class: "col-md-2 control-label" %>
            <%= f.attachment_field :image, class: "image" %>
          </div>
  
          <div class="form-group">
            <%= f.label "商品名", class: "col-md-2 control-label mt-3" %>
            <div class="col-md-10">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
  
          <div class="form-group">
            <%= f.label "商品説明", class: "col-md-2 control-label mt-3" %>
            <div class="col-md-10">
              <%= f.text_area :introduction, class: "form-control", rows: "5" %>
            </div>  
          </div>
  
          <div class="form-group">
            <%= f.label "ジャンル", class: "col-md-2 control-label mt-3" %>
            <div class="col-md-10">
              <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択して下さい --", class: "form-control" %>
            </div>  
          </div>
  
          <div class="form-group">
            <%= f.label "税抜価格(円)", class: "col-md-2 control-label mt-3" %>
            <div class="col-md-10">
              <%= f.text_field :price, class: "form-control" %>
            </div>  
          </div>
  
          <div class="form-group">
              <%= f.label "販売ステータス", class: "col-md-2 control-label mt-3" %>
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "販売中", class: "form-check-label" %>
            </div>
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "販売停止中", class: "form-check-label" %>
            </div>
          </div>
          
          <div class="col-md-10">
            <%= f.submit '新規登録', class: "btn btn-primary btn-block mt-5 mb-3" %>
          </div>
        <% end %>
    </form>
  </div>
</div>











