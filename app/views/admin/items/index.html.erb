<h2>商品一覧</h2>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
    <tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
    <tr>
    <td><%= item.id %></td>
    <td><%= link_to item.name, admin_item_path(item.id) %></td>
    <td><%= converting_to_jpy(item.price) %></td>
    <td><%= item.genre.name %></td>
    <td>
      <% if item.validate == true %>
        <%= "販売中" %>
      <% else %>
        <% "売り切れ" %>
      <% end %>
    </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @items %>

