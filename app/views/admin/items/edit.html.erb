<div class="container">
    <div class="row">
      <h2 class="font-weight-bold mt-5 mb-5">商品編集</h2>
    </div>

    <div class="row">

        <%= form_with model:@item, url:admin_item_path(@item.id), local:true do |f| %>
          <div class="form-group-row">
            <%= f.label :"商品画像", class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.attachment_field :image %>
            </div>

          <div class="form-group-row">
            <%= f.label :"商品名", class: "ecol-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :name, class: "form-control", id: "inputEmail3" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :"商品説明", class: "exampleFormControlTextarea1" %>
            <%= f.text_area :introduction, class: "form-control", id:"exampleFormControlTextarea1", rows: "3" %>
          </div>
          <div class="form-group">
            <%= f.label :"ジャンル", class: "exampleFormControlSelect1" %>
            <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --", class: "form-control", id: "exampleFormControlSelect1") %>
          </div>
          <div class="form-group">
            <%= f.label :"税抜価格", class: "exampleFormControlInput1" %>
            <%= f.text_field :price, class: "form-control", id: "exampleFormControlInput1" %>円
          </div>
          <div class="form-group radio_button">
            <%= f.label :"販売ステータス", class: "col-md-4 control-label" %>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "販売中", value: :true %>
            <%= f.radio_button :is_active, false, class: "ml-3" %>
            <%= f.label :is_active, "販売停止中", value: :false %>
          </div>

          <%= f.submit '変更を保存', class: "btn btn-success" %>
        <% end %>
    </div>

</div>