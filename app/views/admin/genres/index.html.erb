<div class="container">
  <div class="row">
    <div class="col-md-10 px-md-0 mx-auto">
      <div class="offset-2">
        <h4 class="font-weight-bold mt-5">ジャンル一覧・追加</h4>
      </div>
    </div>
  </div>

  <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
  <div class="row">
    <div class="col-md-10 px-md-0 mt-3 mx-auto">
      <div class="mb-3"></div>

      <div class="field mb-4">
        <%= f.label "ジャンル名", class: "font-weight-bold" %>
        <%= f.text_field :name, class: "mx-5" %></h4>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
  </div>
  <% end %>

  <div class="row ml-5 pl-4">
    <div class="col-12">

      <table class="table table-inverse table-hover">
        <thead class="thead-light border-dark">
          <tr>
            <th>ジャンル</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <th colspan="5"><%= genre.name %></th>
            <th colspan="3"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></th>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>

</div>