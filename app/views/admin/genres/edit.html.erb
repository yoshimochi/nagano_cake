<div class="container">
  <div class="row">
    <div class="col-md-10 mt-5">
      <h4 class="offset-1 mb-5 font-weight-bold">ジャンル編集</h4>

      <div class="col-md-10 px-md-10 me-auto">
        <%= form_with model: [:admin, @genre], local:true do |f| %>
        <div class="field">
          <%= f.label "ジャンル名", class: "font-weight-bold" %>
          <%= f.text_field :name, class: "mx-5" %>
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>