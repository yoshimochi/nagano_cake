<div class="container">
  <div class="row">
    <div class="col-sm-10 mt-5">
      <h2 class="offset-sm-1 mb-5 font-weigt-bold">ジャンル編集</h2>

      <div class="col-sm-10 px-sm-10 me-auto">
        <%= form_with model: [:admin, @genre], local:true do |f| %>
        <div class="field">
          <%= f.label "ジャンル名" %>
          <%= f.text_field :name, class: "mx-5" %>
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>