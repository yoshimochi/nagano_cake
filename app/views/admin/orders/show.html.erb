<div class="container">
  <div class="row">
    <div class="col-md-4 mt-3">
      <h4 class="font-weight-bold">注文履歴詳細</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10">
      <table class="table table-borderless table-hover">
        <tr>
          <th class="th-light">購入者</th>
          <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
        </tr>
        <tr>
          <th class="th-light">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="th-light">配送先</th>
          <td>
            〒<%= @order.delivery_postal_code %> <%= @order.delivery_address %><br />
            <%= @order.delivery_name %>
          </td>
        </tr>
        <tr>
          <th class="th-light">支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th class="th-light">注文ステータス</th>
          <td>
          <%= form_with model:@order, url: admin_order_path, local:true do |f| %>
            <%= f.select :status, Order.statuses.keys.map{|k| [I18n.t("enums.order.status.#{k}"), k]}, {} %>
            <%= f.submit '更新', class: "btn btn-success" %>
          <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">単価（税込）</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
            <th scope="col">製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_products.each do |order_product| %>
            <tr>
              <td><%= order_product.item.name %></td>
              <td><%= order_product.tax_included.to_s(:delimited) %>円</td>
              <td><%= order_product.amount %>個</td>
              <td><%= order_product.total_price.to_s(:delimited) %>円</td>
              <td>
                <%= form_with model:order_product, url:admin_order_product_path(order_product), method: :patch, local:true do |f| %>
                  <%= f.select :making_status, OrderProduct.making_statuses.keys.map{|k| [I18n.t("enums.order_product.making_status.#{k}"), k]}, {} %>
                  <%= f.hidden_field :order_id, value: @order.id %>
                  <%= f.submit '更新', class: "btn btn-success" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-3">
      <div class="d-flex align-items-end">
        <table class="table table-borderless table-hover">
          <tr>
            <th>商品合計</th>
            <td><%= @order.total_price.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th>送料</th>
            <td><%= @order.delivery_cost.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <th><%= (@order.total_price + @order.delivery_cost).to_s(:delimited)  %>円</th>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>