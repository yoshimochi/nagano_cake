<div class="container">
  <div class="row">
    <div class="col-md-10 mt-5 mx-auto">
      <h4 class="font-weight-bold"><%= @customer.last_name %><%= @customer.first_name %>さん会員情報編集</h4>
    </div>
  </div>
</div>

<div class="container mx-auto">
  <div class="offset-1">
    <%= form_with model:@customer, url: admin_customer_path(@customer), local:true do |f| %>
    <form class="form-horizontal mt-5">
        <div class="form-row mt-5">
          <%= f.label "会員ID", class: "col-md-2 control-label" %>
          <div class="col">
            <%= @customer.id %>
          </div>
        </div>

        <div class="form-row mt-3">
          <%= f.label "氏名", class: "col-md-2 control-label mt-2" %>
          <div class="col">
            <%= f.text_field :last_name, class: "form-control"  %>
          </div>
          <div class="col">
            <%= f.text_field :first_name, class: "form-control"  %>
          </div>
        </div>

         <div class="form-row mt-3">
          <%= f.label "フリガナ", class: "col-md-2 control-label mt-2" %>
          <div class="col">
            <%= f.text_field :last_name_kana, class: "form-control"  %>
          </div>
          <div class="col">
            <%= f.text_field :first_name_kana, class: "form-control"  %>
          </div>
        </div>

         <div class="form-row mt-3">
          <%= f.label "郵便番号", class: "col-md-2 control-label mt-2" %>
          <div class="col">
            <%= f.text_field :postal_code, class: "form-control"  %>
          </div>
          <div class="col"></div>
        </div>

        <div class="form-row mt-3">
          <%= f.label "住所", class: "col-md-2 control-label mt-2" %>
          <div class="col">
            <%= f.text_field :postal_code, class: "form-control"  %>
          </div>
          <div class="col"></div>
        </div>

        <div class="form-row mt-3">
          <%= f.label "郵便番号", class: "col-md-2 control-label mt-2" %>
          <div class="col">
            <%= f.text_field :address, class: "form-control"  %>
          </div>
        </div>

        <div class="form-row mt-3">
          <%= f.label "電話番号", class: "col-md-2 control-label mt-2" %>
          <div class="col">
            <%= f.text_field :telephone_number, class: "form-control"  %>
          </div>
          <div class="col"></div>
        </div>

        <div class="form-row mt-3">
          <%= f.label "メールアドレス", class: "col-md-2 control-label mt-2" %>
          <div class="col">
            <%= f.email_field :email, class: "form-control"  %>
          </div>
          <div class="col"></div>
        </div>

        <div class="form-row mt-3">
          <%= f.label "会員ステータス", class: "col-md-2 control-label mt-1" %>
          <div class="col">
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "有効", value: :false, class: "form-check-label" %>
            </div>
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "退会", value: :true, class: "form-check-label" %>
            </div>
          <div class="col"></div>
        </div>
        <div class="col-md-10 m-4">
          <div class="offset-2">
            <%= f.submit '変更を保存', class: "btn btn-success" %>
          </div>
        </div>
    </form>
    <% end %>
  </div>
</div>


