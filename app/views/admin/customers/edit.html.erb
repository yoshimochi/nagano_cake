<h2><%= @customer.last_name %><%= @customer.first_name %>さん会員情報編集</h2>

<%= form_with model:@customer, url: admin_customer_path(@customer), local:true do |f| %>
  <div>
    <label>氏名</label>
    <%= f.text_field :last_name %> 
    <%= f.text_field :first_name %>
  </div>

  <div>
    <label>フリガナ</label>
    <%= f.text_field :last_name_kana %> 
    <%= f.text_field :first_name_kana %>
  </div>

  <div>
    <label>郵便番号</label>
    <%= f.text_field :postal_code %>
  </div>

  <div>
    <label>住所</label>
    <%= f.text_field :address %>
  </div>

  <div>
    <label>電話番号</label>
    <%= f.text_field :telephone_number %>
  </div>

  <div>
    <label>メールアドレス</label>
    <%= f.email_field :email %>
  </div>

  <div>
    <label>会員ステータス</label>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "有効" %>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "退会" %>
  </div>

  <%= f.submit '変更を保存' %>

<% end %>