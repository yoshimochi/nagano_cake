<div class="row">
    <div class="col-md-6 mt-5">
      <div class="offset-2">
        <h4 class="font-weight-bold">会員一覧</h4>
      </div>
    </div>
  </div>

<div class="table-responsive">
  <div class="col-md-10 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">会員ID</th>
          <th scope="col">氏名</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %><%= customer.first_name %>
          <% end %>
          </td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_active == false %>
              <p class="text-success">有効</p>
            <% elsif customer.is_active == true %>
              <p class="text-danger">退会</p>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
    <div class="text-center"><%= paginate @customers %></div>
</div>