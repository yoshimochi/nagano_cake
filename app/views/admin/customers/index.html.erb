<h4>会員一覧</h4>

<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td>
      <%= link_to admin_customer_path(customer.id) do %>
        <%= customer.last_name %><%= customer.first_name %>
      <% end %>
      </td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_active == false %>
          <p>有効</p>
        <% elsif customer.is_active == true %>
          <p>退会</p>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>