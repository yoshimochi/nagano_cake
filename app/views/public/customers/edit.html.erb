<h4>会員情報</h4>

<%=form_with model:@customer, local:true do |f| %>

  <div>
    <label>氏名</label>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <label>フリガナ</label>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div>
    <label>郵便番号</label>
    <%= f.text_field :postal_code %>
  </div>

  <div>
    <label>住所</label>
    <%= f.text_field :address %>
  </div>

  <div>
    <label>電話番号</label>
    <%= f.text_field :telephone_number %>
  </div>

  <div>
    <label>メールアドレス</label>
    <%= f.email_field :email %>
  </div>

  <%= f.submit '変更内容を保存' %>
  <%= link_to '退会する', customers_unsubscribe_path %>
<% end %>
