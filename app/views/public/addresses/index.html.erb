<h3>配送先登録/一覧</h3>
<%= form_with model:@address, local:true do |f| %>
  <%= f.label  "郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code,  autofocus: true, placeholder: "0000000" %>
  <%= f.label  "住所" %>
  <%= f.text_field :address,  autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0" %>
  <%= f.label  "宛名" %>
  <%= f.text_field :name,  autofocus: true, placeholder: "令和道子" %>
  <%= f.submit '新規登録' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
      </tr>
  </thead>
  <tbody>
  <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to '編集する', edit_address_path(address) %>
        <%= link_to '削除する', address_path(address), method: :delete %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>