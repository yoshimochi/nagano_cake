<div class="container">
  <div class="row">
    <div class="col-md-10 mt-5 mx-auto">
      <h4 class="font-weight-bold">配送先登録/一覧</h4>
    </div>
  </div>
</div>

<div class="container mx-auto">
  <%= form_with model:@address, url: addresses_path(@address), local:true do |f| %>
    <form class="form-horizontal mt-5">
        <div class="form-row mt-3">
          <%= f.label  "郵便番号(ハイフンなし)", class: "col-md-2 control-label" %>
          <div class="col-md-4">
            <%= f.text_field :postal_code,  autofocus: true, placeholder: "0000000", class: "form-control" %>
          </div>
        </div>
        <div class="form-row mt-3">
          <%= f.label  "住所", class: "col-md-2 control-label" %>
          <div class="col-md-8">
            <%= f.text_field :address,  autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
          </div>
        </div>
        <div class="form-row mt-3">
          <%= f.label  "宛名", class: "col-md-2 control-label" %>
          <div class="col-md-4">
            <%= f.text_field :name,  autofocus: true, placeholder: "令和道子", class: "form-control" %>
          </div>
          <div class="col">
            <%= f.submit '新規登録', class: "btn btn-success w-25 ml-5" %>
          </div>
        </div>
    </form>
  <% end %>
</div>

<div class="container mx-auto">
  <div class="row">
    <div class="col-md-10 mt-5 mb-5">
      <table class="table table-bordered table-hover">
        <thead class="thead-light">
          <tr>
            <th scope="col">郵便番号</th>
            <th scope="col">住所</th>
            <th scope="col">宛名</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <div class="row mx-auto">
                <div class="col-5">
                  <%= link_to '編集する', edit_address_path(address), class: "btn btn-success" %>
                </div>
                <div class="col-5">
                  <%= link_to '削除する', address_path(address), method: :delete, class: "btn btn-danger" %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>