<div class="container">
  <div class="row">
    <h4>配送先登録/一覧</h4>
  </div>

  <%= form_with model:@address, url: addresses_path(@address), local:true do |f| %>
    <div class="row">
      <div class="form-group">
        <div>
          <%= f.label  "郵便番号(ハイフンなし)", class: "col-md-10 col-form-label" %>
        <div>
          <%= f.text_field :postal_code,  autofocus: true, placeholder: "0000000", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <div class"col-md-10">
          <%= f.label  "住所", class: "col-md-6 col-form-label" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :address,  autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <div class"col-md-10">
          <%= f.label  "宛名", class: "col-md-6 col-form-label" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name,  autofocus: true, placeholder: "令和道子", class: "form-control" %>
        </div>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
    </div>
   <% end %>
</div>

<div class="row">
  <div class="col-md-10">
    <table class="table table-bordered table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">郵便番号</th>
          <th scope="col">住所</th>
          <th scope="col">宛名</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to '編集する', edit_address_path(address), class: "btn btn-success" %>
            <%= link_to '削除する', address_path(address), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>