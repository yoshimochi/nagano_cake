<h2>ショッピングカート</h2>
<%= button_to "カートを空にする", destroy_all_cart_items_path, method: :delete %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @sum = 0 %>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
      <%= link_to items_path do %>
        <%= attachment_image_tag cart_item.item, :image, fallback: "no_image.png", size: "60x60" %>
      <% end %>
        <%= cart_item.item.name %>
      </td>
      <td>
        <%= cart_item.item.add_tax_price.to_s(:delimited) %>
      </td>

      <td><%= cart_item.amount %></td>
      <td>
        <% @sub_total = cart_item.item.add_tax_price * cart_item.amount %>
        <%= @sub_total.to_s(:delimited) %>
      </td>
      <td>
      <%= form_with model:@cart_item, url: cart_item_path(cart_item), method: :delete, local:true do |f| %>
        <%= f.submit  '削除する' %>
        <%= f.hidden_field :item_id, :value => cart_item.item.id %>
      <% end %>
      </td>
    </tr>
  <% @sum += @sub_total %>
  <% end %>
  </tbody>
</table>

<%= link_to "買い物を続ける", items_path %>

<table>
  <tr>
    <td>合計金額</td>
    <th><%= @sum.round.to_s(:delimited) %></th>
  </tr>
</table>

