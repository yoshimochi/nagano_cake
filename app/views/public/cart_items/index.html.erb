<div class="container">
  <div class="row">
    <div class="ml-3">
      <h4 class="font-weight-bold mt-5">ショッピングカート</h4>
    </div>
    <div class="col">
      <div class="text-right mt-5">
        <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 mt-3 mx-auto">
      <table class="table table-bordered table-hover">
        <thead class="thead-light">
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">単価(税込)</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
            <th scope="col"></th>
          </tr>
        </thead>

        <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
            <%= link_to items_path do %>
              <%= attachment_image_tag(cart_item.item, :image, fallback: "no_image.png", size: "60x60") %>
            <% end %>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= tax_price(cart_item.item.price).to_s(:delimited) %>
            </td>

            <td>
            <%= form_with url: cart_item_path(cart_item), method: :patch, local: true do |f| %>
              <%= f.select :amount, options_for_select(@numbers, {selected: cart_item.amount.to_i}) %>
              <%= f.hidden_field :item_id, value: cart_item.item_id %>
              <%= f.submit "変更", class: "btn btn-success" %>
            <% end %>
            </td>

            <td>
              <%= sub_price(cart_item).to_s(:delimited) %>
            </td>

            <td>
            <%= link_to '削除する', cart_item_path(cart_item), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

<div class="container mb-5">
  <div class="row mt-3 mb-5 mx-auto">
      <div class="col-md-8">
        <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
      </div>
      <div class="col-md-4">
          <table class="table table-bordered">
            <tr>
              <th class="table-active">合計金額</th>
              <td><%= total_price(@cart_items).to_s(:delimited) %></td>
            </tr>
          </table>
      </div>
  </div>

  <div class="text-center "><%= link_to "情報入力に進む", new_order_path, class: "btn btn-success w-25" %></div>
</div>

