<h2>ショッピングカート</h2>
<%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
      <%= link_to items_path do %>
        <%= attachment_image_tag(cart_item.item, :image, fallback: "no_image.png", size: "60x60") %>
      <% end %>
        <%= cart_item.item.name %>
      </td>
      <td>
        <%= tax_price(cart_item.item.price).to_s(:delimited) %>
      </td>

      <td>
      <%= form_with url: cart_item_path(cart_item), method: :patch, local: true do |f| %>
        <%= f.select :amount, options_for_select(@numbers, {selected: cart_item.amount.to_i}) %>
        <%= f.hidden_field :item_id, value: cart_item.item_id %>
        <%= f.submit "変更" %>
      <% end %>
      </td>

      <td>
        <%= sub_price(cart_item).to_s(:delimited) %>
      </td>

      <td>
      <%= link_to '削除する', cart_item_path(cart_item), method: :delete %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>


<%= link_to "買い物を続ける", items_path %>

<table>
  <tr>
    <td>合計金額</td>
    <th><%= total_price(@cart_items).to_s(:delimited) %></th>
  </tr>
</table>

<%= link_to "情報入力に進む", new_order_path %>
