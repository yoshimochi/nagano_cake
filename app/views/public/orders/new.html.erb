<h2>注文情報入力</h2>

<div>
  <h4>支払方法</h4>
  <%= form_with model:@order, local:true do |f| %>
    <%= f.radio_button :payment_method, :"クレジットカード" %>
    <%= f.label :"クレジットカード" %><br />
    <%= f.radio_button :payment_method, :"銀行振込" %>
    <%= f.label :"銀行振込" %>
</div>

<div>
  <h4>お届け先</h4>
    <div>
      <%= f.radio_button :select_address, :customer_address %>
      <%= f.label :select_address, "ご自身の住所", {value: :customer_address} %><br />
      〒<% @customer.postal_code %> <%= @customer.address %><br />
      <%= @customer.last_name %><%= @customer.first_name %>
    </div>
    <div>
      <%= f.radio_button :select_address, :delivery_address %>
      <%= f.label :select_address, "登録済住所から選択", {value: :delivery_address} %><br />

    </div>
    <div>
      <%= f.radio_button :select_address, :new_delivery_address %>
      <%= f.label :select_address, "新しいお届け先", {value: :new_delivery_address} %><br />
      <%= f.label :delivery_postal_code, "郵便番号(ハイフンなし)" %>
      <%= f.text_field :delivery_postal_code,  autofocus: true, placeholder: "0000000" %>
      <%= f.label :delivery_address, "お届け先" %>
      <%= f.text_field :delivery_address, autofocus: true, placeholder: "東京都渋谷区代々木神園町０-０" %>
      <%= f.label :delivery_name, "宛名" %>
      <%= f.text_field :delivery_name, autofocus: true, placeholder: "令和道子" %>
    </div>
      <%= f.submit '確認画面に進む' %>
</div>
  <% end %>

