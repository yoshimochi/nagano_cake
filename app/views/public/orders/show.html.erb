<h3>注文履歴詳細</h3>

<div>
  <h4>注文情報</h4>
  <table>
    <tr>
      <td>注文日</td>
      <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
    </tr>
    <tr>
      <td>配送先</td>
      <th>
        〒<%= @order.delivery_postal_code %><br />
        <%= @order.delivery_address %><br />
        <%= @order.delivery_name %>
      </th>
    </tr>
    <tr>
      <td>支払方法</td>
      <th><%= @order.payment_method %></th>
    </tr>
  </table>
</div>

<div>
  <table>
    <tr>
      <td>商品合計</td>
      <th><%= @order.total_price.to_s(:delimited) %>円</th>
    </tr>
    <tr>
      <td>配送料</td>
      <th><%= @order.delivery_cost %>円</th>
    </tr>
    <tr>
      <td>ご請求額</td>
      <th><%= (@order.total_price + @order.delivery_cost).to_s(:delimited)  %>円</th>
    </tr>
  </table>
</div>

<div>
  <table>
    <thead>
      <tr>
        <td>商品</td>
        <td>単価(税込)</td>
        <td>個数</td>
        <td>小計</td>
      </tr>
    </thead>
    <tbody>
    <% @order_products.each do |order_product| %>
      <tr>
        <th><%= order_product.item.name %></th>
        <th><%= order_product.tax_included.to_s(:delimited) %>円</th>
        <th><%= order_product.amount %>個</th>
        <th><%= order_product.total_price.to_s(:delimited) %>円</th>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
