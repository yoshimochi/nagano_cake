<div class="container">
  <div class="row">
    <div class="offset-1">
      <h4 class="font-weight-bold mt-5 mb-5">注文履歴一覧画面</h4>
    </div>
  </div>

  <div class="row">
      <table class="table table-bordered table-hover">
        <thead class="thead-light">
          <tr>
            <th scope="col">注文日</th>
            <th scope="col">配送先</th>
            <th scope="col">注文商品</th>
            <th scope="col">支払金額</th>
            <th scope="col">ステータス</th>
            <th scope="col">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.delivery_postal_code %><br />
              <%= order.delivery_address %><br />
              <%= order.delivery_name %>
            </td>
            <td>
              <% order.order_products.each do |order_product| %>
                <%= order_product.item.name %><br />
              <% end %>
            </td>
            <td><%= (order.total_price + order.delivery_cost).to_s(:delimited) %>円</td>
            <td><%= order.status %></th>
            <td><%= link_to '表示する', order_path(order.id), class: "btn btn-primary" %></td>
            <!--<td><#%= link_to '削除', order_path(order), method: :delete %></td>-->
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
      <%= paginate @orders %>
