<h3>新着商品</h3>

<% @items.each do |item| %>
  <%= link_to item_path(item.id) do %>
    <%= attachment_image_tag item, :image, fallback: "no_image.png", size: "100x100" %>
  <% end %>
    <p>商品名　<%= item.name %></p>
    <p>¥ <%= item.price.to_s(:delimited) %></p>
<% end %>

<%= link_to '全ての商品を見る>', items_path %>
