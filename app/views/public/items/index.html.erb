<div class="album py-5">
  <div class="container">
    <div class="row">
      <div class="top-new">
        <h3 class="font-weight-bold mb-4">商品一覧 (全<%= @items.total_count %>件)</h3>
      </div>
    </div>  
    
    <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <div class="card mb-3 shadow-sm">
          <%= link_to item_path(item.id), :style=> "color:black" do %>
            <%= attachment_image_tag item, :image, fallback: "no_image.png", width: "100%", height: "180", class: "card-image-top" %>
          <% end %>
        </div>
        <div class="card-body">
          <h6 class="card-title">商品名　<%= item.name %></h6>
          <p class="card-text">¥ <%= item.price.to_s(:delimited) %></p>
        </div>
      </div>
    <% end %>
    </div>  
    <p><%= paginate @items, class: "justify-content-center" %></p>
  </div>
</div>