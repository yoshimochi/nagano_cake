<h3>商品一覧 (全<%= @items.total_count %>件)</h3><br />

<% @items.each do |item| %>
  <%= link_to item_path(item.id) do %>
    <%= attachment_image_tag item, :image, fallback: "no_image.png", size: "100x100" %>
  <% end %>
    <p>商品名　<%= item.name %></p>
    <p>¥ <%= item.price.to_s(:delimited) %></p>
<% end %>