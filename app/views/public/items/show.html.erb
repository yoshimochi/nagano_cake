<%= attachment_image_tag @item, :image, fallback: "no_image.png", size: "100x100" %>
<p><%= @item.name %></p>
<p><%= @item.introduction %></p>
<p>¥ <%= @item.add_tax_price.to_s(:delimited) %>(税込）</p>
<%= form_with model: @curt_item, url: cart_items_path, local:true do |f| %>
  <%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択" %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <%= f.submit "カートに入れる" %>
<% end %>
