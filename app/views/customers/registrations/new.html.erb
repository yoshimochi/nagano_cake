<div class="container-fluid registration py-5">
  <div class="row">
    <div class="offset-2">
      <h2 class="red-border px-3">新規登録画面</h2>
    </div>
  </div>


  <div class="row mt-3">
    <div class="offset-2 col-7">
    <%= form_with scope: resource, url: registration_path(resource_name), local: true do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :名前, class: "brown-border px-3" %>
        <div class="row">
          <%= f.label "(姓)" %> <%= f.text_field :last_name, autofocus: true, placeholder: "令和", class: "form-control offset-1 col-3" %>
          <%= f.label "(名)" %> <%= f.text_field :first_name, autofocus: true, placeholder: "道子", class: "form-control offset-1 col-3" %>
        </div>
        <div class="row">
          <%= f.label "(セイ)" %> <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ", class: "form-control offset-1 col-3" %>
          <%= f.label "(メイ)" %> <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ", class: "form-control offset-1 col-3" %>
        </div>

      <div class="form-group">
        <%= f.label "メールアドレス", class: "brown-border px-3" %>
        <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label "郵便番号(ハイフンなし)", class: "brown-border px-3" %>
        <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label "住所", class: "brown-border px-3" %>
        <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label "電話番号(ハイフンなし)", class: "brown-border px-3" %>
        <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label "パスワード", class: "brown-border px-3" %>
        <% if @minimum_password_length %>
        (<%= @minimum_password_length %> 文字以上)
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control offset-1 col-11" %>
      </div>

      <div class="form-group">
        <%= f.label "パスワード(確認用)", class: "brown-border px-3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control offset-1 col-11" %>
      </div>

      <div class="row">
        <%= f.submit "新規登録", class: "btn btn-success form-control offset-1 col-11" %>
      </div>
    <% end %>
    </div>

    <div class="row">
        <h4>既に登録済みの方</h4>
        <p><%= link_to 'こちら', customer_session_path, class: "btn btn-sm btn-outline-danger" %>　からログインしてください</p>
    </div>

  </div>



</div>

