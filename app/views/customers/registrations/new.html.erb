<h2>新規登録画面</h2>

<%= form_with scope: resource, url: registration_path(resource_name), local: true do |f| %>
<!--%= form_with model: @customer, url:customer_registration_path, local:true do |f| %>-->
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "(姓)" %> <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
    <%= f.label "(名)" %> <%= f.text_field :first_name, autofocus: true, placeholder: "道子" %>
  </div>

  <div class="field">
    <%= f.label "(セイ)" %> <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
    <%= f.label "(メイ)" %> <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>　<%= f.email_field :email, autofocus: true, placeholder: "sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %>　<%= f.text_field :postal_code, placeholder: "0000000" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>　<%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <%= f.label "電話番号(ハイフンなし)" %>　<%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>　<%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード(確認用)" %> <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<p><%= link_to 'こちら', customer_session_path %>　からログインしてください</p>
