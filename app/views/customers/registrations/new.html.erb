<div class="container">
  <div class="row">
    <div class="col-md-10 mt-5 mx-auto">
      <h4 class="font-weight-bold">新規登録画面</h4>
    </div>
  </div>
</div>

<div class="container mx-auto">
  <div class="offset-2">
  <%= form_with scope: resource, url: registration_path(resource_name), local: true do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
   <form class="form-horizontal mt-5">
      <div class="form-row mt-3">
        <%= f.label "名前", class: "col-md-3 control-label" %>
        <div class="col">
          <%= f.text_field :last_name, autofocus: true, placeholder: "令和", class: "form-control" %>
        </div>
        <div class="col">
          <%= f.text_field :first_name, autofocus: true, placeholder: "道子", class: "form-control" %>
        </div>
      </div>

      <div class="form-row mt-3">
        <%= f.label "フリガナ", class: "col-md-3 control-label" %>
        <div class="col">
          <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ", class: "form-control" %>
        </div>
        <div class="col">
          <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ", class: "form-control" %>
        </div>
      </div>

      <div class="form-row mt-3">
        <%= f.label "メールアドレス", class: "col-md-3 control-label" %>
        <div class="col">
          <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class: "form-control" %>
        </div>
        <div class="col"></div>
      </div>

      <div class="form-row mt-3">
        <%= f.label "郵便番号(ハイフンなし)", class: "col-md-3 control-label" %>
        <div class="col">
          <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %>
        </div>
        <div class="col"></div>
      </div>

      <div class="form-row mt-3">
        <%= f.label "住所", class: "col-md-3 control-label" %>
        <div class="col">
          <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
        </div>
      </div>

      <div class="form-row mt-3">
        <%= f.label "電話番号(ハイフンなし)", class: "col-md-3 control-label" %>
        <div class="col">
          <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000000", class: "form-control" %>
        </div>
        <div class="col"></div>
      </div>

      <div class="form-row mt-3">
        <%= f.label "パスワード(6文字以上)", class: "col-md-3 control-label" %>
        <div class="col">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="col"></div>
      </div>

      <div class="form-row mt-3">
        <%= f.label "パスワード(確認用)", class: "col-md-3 control-label" %>
        <div class="col">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="col"></div>
      </div>

      <div class="col-md-10 m-4">
        <div class="offset-3">
          <%= f.submit "新規登録", class: "btn btn-success w-25" %>
        </div>
      </div>
    </form>
  <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-10 mt-5 mx-auto">
      <h4 class="font-weight-bold">既に登録済みの方</h4>
      <p class="offset-1 mt-3 "><%= link_to 'こちら', customer_session_path, class: "btn btn-md btn-outline-success" %>　からログインしてください</p>
    </div>
  </div>
</div>